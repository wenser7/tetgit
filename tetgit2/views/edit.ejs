<% include header%>
<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<title></title>
	</head>

	<body>
		<h1> Edit task view</h1>
		<form method="post" action='/tasks/edit/<%=task.id%>'>
			<fieldset>
				<legend>Editing</legend>
				<label>Task</label>
				<div>
					<input name="task" value='<%=task.task%>' />
				</div>
				<div>
					<input type="submit" value="Save" class="btn btn-primary" />
					<button type="reset" class="btn">Cancel</button>
				</div>
			</fieldset>
		</form>
		<% include footer%>